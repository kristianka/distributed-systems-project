{
  "name": "distributed-systems-project",
  "module": "index.ts",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "test-client": "bun run src/test-client.ts",
    "bench": "bun run src/bench/benchmark.ts",
    "bench:latency": "bun run src/bench/benchmark.ts --test latency",
    "bench:throughput": "bun run src/bench/benchmark.ts --test throughput",
