{
  "name": "distributed-systems-project",
  "module": "index.ts",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "node-a": "bun run src/index.ts node-a",
    "node-b": "bun run src/index.ts node-b",
    "node-c": "bun run src/index.ts node-c",
    "start-all": "concurrently \"bun run node-a\" \"bun run node-b\" \"bun run node-c\"",
    "test-client": "bun run src/test-client.ts",
    "frontend:install": "cd frontend && npm install",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "dev": "concurrently \"bun run start-all\" \"bun run frontend:dev\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^8.2.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
